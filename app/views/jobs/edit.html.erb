<div class="jo-link">
  <%= link_to "Add JO ", new_job_path %> |
  <%= link_to 'Ongoing', jobs_path %> |
  <%= link_to "Finished ", accomplished_jobs_path %> |
  <%= link_to "Sign out",  destroy_user_session_path,  :method=> :delete %> |
  <h5>v.3.0.3</h5>
</div>
<h1>Update Job Order</h1>
<%= semantic_form_for(@job) do |f| %>
  <%= f.inputs do %>
   <%= f.input :technical,         :label => "Technical / Installer" %>

  <%= f.input :todo,              :label => "To Do" %>

  <%= f.input :work_done,         :label => "Work Done" %>

  <%= f.input :remarks,           :label => "Remarks" %>

  <%= f.input :date_time_finished,:default       => Date.today,
                                  :start_year    => 2011,
                                  :include_blank => false,
                                  :label => "Time/Date Finished" %>
  <div class="status">
  
  <%= f.input :status,            :include_blank => false,  
                                  :collection => [["ONGOING", "ONGOING"],
                                                 ["FINISHED","FINISHED"]] %>
  <!--<%= f.input :done,              :label => "Working", :hint => "Please check if its working" %>-->
   </div>
  <% end %>
  
  <%= f.buttons %>
<% end %>



