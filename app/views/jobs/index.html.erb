<h1>Job-Order Monitoring</h1>

<table>
  <tr>
    <th>Date time started</th>
    <th>Ref no</th>
    <th>Company</th>
   
    <th>Technical</th>
    
   
    
  
   
   
    
    <th>Status</th>
    <th>Prepared by</th>
    
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.date_time_started %></td>
    <td><%= job.ref_no %></td>
    <td><%= job.company %></td>
   
    <td><%= job.technical %></td>
   
   
    
    
    
    <td><%= job.status %></td>
    <td><%= job.prepared_by %></td>
   
    <td><%= link_to 'View', job %></td>
    <td><%= link_to 'Update', edit_job_path(job) %></td>
    <td><%= link_to 'Approved', job, :confirm => 'Are you sure?'%></td>
  </tr>
<% end %>
</table>




