  <%= f.input :ref_no %>
  <%= f.input :company %>
  <%= f.input :address %>
  <%= f.input :technical %>
  <%= f.input :contact_no %>
  <%= f.input :system_model %>
  <%= f.input :contact_person %>
  <%= f.input :todo %>
  <%= f.input :work_done %>
  <%= f.input :remarks %>
