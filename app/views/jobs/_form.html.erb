
<%= semantic_form_for(@job) do |f| %>
  <%= f.inputs do %>
  <%= f.input :date_time_started,        :start_year    => Date.current.year,
                                         :include_blank => false,  
                                         :label => "Time/Date",
					 :hint => "Please indicate the date and time before proceed."%>

  <!--<%= f.input :id,                   :start    => 2011,
                                         :label => "Auto Generate" %>-->

  <%= f.input :company,                  :label => "Company",
					 :hint => "Complete the Field."%>

  <%= f.input :contact_person,           :label => "Contact Person",
					 :hint => "Complete the Field."%>
  					 

  <%= f.input :address,                  :label => "Address",
                                         :hint => "Complete the Field."%>

  <%= f.input :contact_no,               :label => "Contact No:",
 					 :hint => "+63917-1234567 Sample format."%>

  <%= f.input :system_model,             :label => "System / Model",
                                         :hint => "Complete the Field."%>

  <%= f.input :technical,                :label => "Technical / Installer",
				   	 :hint => "if more than installer put ' / ' after name."%>

  <%= f.input :todo,                     :label => "To Do",
					 :hint => "Complete the Field."%>

  <%= f.input :work_done,                :label => "Work Done",
					 :hint => "Complete the Field."%>

  <%= f.input :remarks,                  :label => "Remarks",
					 :hint => "Complete the Field."%>

  

  <div class="status">
  <%= f.input :prepared_by,              :include_blank => false, 
                                         :collection => [["- Select -"," admin "],
                                                 ["steven@asi.com.ph", "steven@asi.com.ph"], 
                                                 ["chris@asi.com.ph","chris@asi.com.ph"],
                                                 ["adrian@asi.com.ph", "adrian@asi.com.ph"],
                                                 ["elzy.gensan@asi.com.ph", "elzy.gensan@asi.com.ph"],  
                                                 ["stephene@asi.com.ph", "stephene@asi.com.ph"]],
					 :hint => "your IP is detected please indicate your name."%>

  <%= f.input :status,                   :include_blank => false, 
                                         :collection => [["ONGOING", "ONGOING"],
                                                  ["PENDING", "PENDING"]],
					 :hint => "Complete the Field."%>
   </div>
  <% end %>

  <%= f.buttons %>
  
<% end %>
