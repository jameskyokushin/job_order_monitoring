


<%= semantic_form_for(@inquiry) do |f| %>
  <%= f.inputs do %>
  <div class="hidden">
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </div>

  <%= f.input :client_name,              :label => "Caller Name",
					 :hint => "Complete the field."%>


  <%= f.input :inq_company_name,         :label => "Company Name",
					 :hint => "Complete the field." %>

  <%= f.input :tel_cel,                  :label => "Landline",
					 :hint => "Complete the field" %>


  <%= f.input :concern,                  :label => "Concern",
                                         :hint => "state your concern"  %>
  
  <%= f.input :request,                  :label => "Request",
  					 :hint => "Complete the field" %>

  
  <% end %>  
  <%= f.buttons %>
<% end %>
